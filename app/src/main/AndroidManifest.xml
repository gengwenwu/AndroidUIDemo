<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logan.android.ui">

    <!-- 权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Glide -->
        <activity android:name=".image.glide.GlideMainActivity" />
        <activity android:name=".image.glide.GlideSimpleActivity" />
        <activity android:name=".image.glide.RecyclerViewCaseActivity" />
        <activity android:name=".image.glide.transform.TransformActivity" />

        <!-- 约束布局 -->
        <activity android:name=".layout.constraint.ConstraintMainActivity" />
        <activity android:name=".layout.constraint.ConstraintBarrierActivity" />
        <activity android:name=".layout.constraint.ConstraintCenterActivity" />
        <activity android:name=".layout.constraint.ConstraintChainActivity" />
        <activity android:name=".layout.constraint.ConstraintCircleActivity" />
        <activity android:name=".layout.constraint.ConstraintMarginActivity" />
        <activity android:name=".layout.constraint.ConstraintOtherActivity" />
        <activity android:name=".layout.constraint.ConstraintRelativeActivity" />
        <activity android:name=".layout.constraint.ConstraintSizeActivity" />


    </application>

</manifest>